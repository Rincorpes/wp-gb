/* Default Theme */
/* ----------------------------------------- */


// Vars
nocolor = transparent
light = #fafafa
greyE = #eee //background
greyD = #ddd //borders
greyC = #ccc //light links
grey7 = #777 //paragraf
grey3 = #333
darkest = #101010
lightOrange = #f7931a
darkOrange = #ff7800
myBlue = #217875
grey3Alpha5 = rgba(16, 16, 16, .5)
grey3Alpha75 = rgba(16, 16, 16, .75)


// Mixins
decoration(decoration)
	text-decoration decoration
paintin(color)
	background-color color
radius(radius)
	-webkit-border-radius radius
	-moz-border-radius radius
	border-radius radius
b-shadow(x y blur color)
	-webkit-box-shadow x y blur color
	-moz-box-shadow x y blur color
	box-shadow x y blur color
	
